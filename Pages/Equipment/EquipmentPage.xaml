<Page x:Class="EquipmentAccounting.Pages.Equipment.EquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentAccounting.Pages.Equipment"
            mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="EquipmentPage"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="BackButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28AEED"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки сортировки -->
        <Style x:Key="SortButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0060AC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28AEED"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для элементов оборудования -->
        <Style x:Key="EquipmentItemStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#28AEED"/>
                    <Setter Property="Background" Value="#E8F4FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border CornerRadius="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с заголовком, поиском и управлением -->
            <Border Grid.Row="0" CornerRadius="10" Background="#F8F9FA" Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок слева -->
                    <TextBlock Grid.Column="0"
                           Text="ОБОРУДОВАНИЕ"
                           Foreground="#0060AC"
                           FontSize="20"
                           FontWeight="Bold"
                           FontFamily="Montserrat"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="20,0"/>

                    <!-- Поиск и сортировка по центру -->
                    <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">

                        <!-- Поле поиска -->
                        <TextBox x:Name="txtSearch"
                             Width="300"
                             Height="35"
                             FontSize="14"
                             FontFamily="Montserrat"
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             KeyDown="txtPass_KeyDown">
                            <TextBox.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="#F8F9FA" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBox.Background>
                            <TextBox.ToolTip>
                                <TextBlock Text="Поиск по наименованию оборудования" FontSize="12"/>
                            </TextBox.ToolTip>
                        </TextBox>

                        <!-- Выпадающий список сортировки -->
                        <ComboBox x:Name="cmbSortBy"
                              Width="200"
                              Height="35"
                              Margin="10,0,0,0"
                              FontSize="12"
                              FontFamily="Montserrat"
                              SelectedIndex="0"
                              VerticalContentAlignment="Center"
                              SelectionChanged="cmbSortBy_SelectionChanged">
                            <ComboBoxItem Content="Id"/>
                            <ComboBoxItem Content="Наименование"/>
                            <ComboBoxItem Content="Инвентарный номер"/>
                            <ComboBoxItem Content="Стоимость"/>
                        </ComboBox>

                        <!-- Кнопка сортировки -->
                        <Button x:Name="btnSortOrder"
                            Content="По возрастанию"
                            Style="{StaticResource SortButtonStyle}"
                            Width="150"
                            Height="35"
                            Margin="10,0,0,0"
                            Click="btnSortOrder_Click"/>
                    </StackPanel>

                    <!-- Кнопка возврата справа -->
                    <Button Grid.Column="2"
                        x:Name="btnBack"
                        Content="На главную"
                        Style="{StaticResource BackButtonStyle}"
                        Width="120"
                        Height="35"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0"
                        Click="btnBack_Click"/>
                </Grid>
            </Border>
            <ScrollViewer Grid.Row="1">
                <StackPanel x:Name="parent"/>
            </ScrollViewer>
            <Border Grid.Row="2" CornerRadius="10" Background="#F8F9FA" Margin="10">
                <Grid>
                    <Button
                        Grid.Row="2"
                        Content="Добавить"
                        Style="{StaticResource SortButtonStyle}"
                        Width="150"
                        Height="35"
                        HorizontalAlignment="Right"
                        Margin="20,0"
                        Click="btnAddClick"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
