<Page x:Class="EquipmentAccounting.Pages.Equipment.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentAccounting.Pages.Equipment"
                  mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="EquipmentPage">

    <Page.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="BackButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28AEED"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки сортировки -->
        <Style x:Key="SortButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0060AC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28AEED"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для элементов оборудования -->
        <Style x:Key="EquipmentItemStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#28AEED"/>
                    <Setter Property="Background" Value="#E8F4FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Border CornerRadius="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с заголовком, поиском и управлением -->
            <Border Grid.Row="0" CornerRadius="10" Background="#F8F9FA" Margin="10">
                <Grid>
                    <!-- Заголовок слева -->
                    <TextBlock Grid.Column="0" x:Name="txtTitle"
                           Text="Добавление оборудования"
                           Foreground="#0060AC"
                           FontSize="20"
                           FontWeight="Bold"
                           FontFamily="Montserrat"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="20,0"/>

                    <!-- Кнопка возврата справа -->
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Label x:Name="id" Content="Код: 1" FontSize="16" FontWeight="SemiBold"  Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Label Content="Наименование:" FontSize="20" FontWeight="Bold" Margin="10,49,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="name"
                         Height="35"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Padding="10,0"
                         VerticalAlignment="Top"
                         VerticalContentAlignment="Center"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1" Margin="10,90,10,0">
                        <TextBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#F8F9FA" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                    </TextBox>
                    <Label Content="Инвентарный номер:" FontSize="16" Margin="10,130,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="inventory_number"
                         Height="35"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Padding="10,0"
                         VerticalAlignment="Top"
                         VerticalContentAlignment="Center"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1" Margin="10,161,10,0">
                        <TextBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#F8F9FA" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                        <TextBox.ToolTip>
                            <TextBlock Text="Поиск по наименованию оборудования" FontSize="12"/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Content="Цена:" FontSize="16" Margin="10,201,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="cost"
                         Height="35"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Padding="10,0"
                         VerticalAlignment="Top"
                         VerticalContentAlignment="Center"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1" Margin="10,232,10,0">
                        <TextBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#F8F9FA" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                        <TextBox.ToolTip>
                            <TextBlock Text="Поиск по наименованию оборудования" FontSize="12"/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Content="Комментарий:" FontSize="16" Margin="10,272,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="comment"
                        Height="201"
                        FontSize="14"
                        FontFamily="Montserrat"
                        Padding="10,0"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Top"
                        HorizontalContentAlignment="Left"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1" Margin="10,303,10,0" TextWrapping="Wrap">
                        <TextBox.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#F8F9FA" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                        <TextBox.ToolTip>
                            <TextBlock Text="Поиск по наименованию оборудования" FontSize="12"/>
                        </TextBox.ToolTip>
                    </TextBox>
                </Grid>
                <Grid Grid.Column="1">
                    <Label Content="Аудитория:" FontSize="16" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="room"
                          Height="35"
                          Margin="10,41,310,0"
                          FontSize="12"
                          FontFamily="Montserrat"
                          SelectedIndex="0"
                          VerticalContentAlignment="Center"
                          VerticalAlignment="Top">
                        <ComboBoxItem Tag="empty" Content=""></ComboBoxItem>
                    </ComboBox>
                    <Label Content="Ответственный:" FontWeight="Bold" FontSize="16" Margin="10,81,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="responsible"
                        Height="35"
                        Margin="10,112,10,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        SelectedIndex="0"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Top">
                        <ComboBoxItem Tag="empty" Content=""></ComboBoxItem>
                    </ComboBox>
                    <Label Content="Временно ответственный:" FontSize="16" Margin="10,152,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="temp_responsible"
                        Height="35"
                        Margin="10,183,10,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        SelectedIndex="0"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Top">
                        <ComboBoxItem Tag="empty" Content=""></ComboBoxItem>
                    </ComboBox>
                    <Label Content="Направление:" FontSize="16" Margin="10,223,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="direction"
                        Height="35"
                        Margin="10,254,310,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        SelectedIndex="0"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Top">
                        <ComboBoxItem Tag="empty" Content=""></ComboBoxItem>
                    </ComboBox>
                    <Label Content="Статус:" FontSize="16" FontWeight="Bold" Margin="10,294,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="status"
                        Height="35"
                        Margin="10,325,310,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        SelectedIndex="0"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Top">
                        <ComboBoxItem Tag="empty" Content=""></ComboBoxItem>
                    </ComboBox>
                    <Label Content="Модель оборудования:" FontSize="16" Margin="10,365,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="model"
                        Height="35"
                        Margin="10,396,310,0"
                        FontSize="12"
                        FontFamily="Montserrat"
                        SelectedIndex="0"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Top">
                        <ComboBoxItem Tag="empty" Content=""></ComboBoxItem>
                    </ComboBox>
                </Grid>

            </Grid>
            <Border Grid.Row="2" CornerRadius="10" Background="#F8F9FA" Margin="10">
                <Grid>
                    <Button
                        Grid.Row="2"
                        Content="Отменить"
                        Style="{StaticResource SortButtonStyle}"
                        Width="150"
                        Height="35"
                        HorizontalAlignment="Right"
                        Margin="180,0"
                        Background="Gray"
                        Click="btnCancelClick"/>
                    <Button
                        Grid.Row="2"
                        x:Name="btnSave"
                        Content="Сохранить"
                        Style="{StaticResource SortButtonStyle}"
                        Width="150"
                        Height="35"
                        HorizontalAlignment="Right"
                        Margin="20,0"
                        Click="btnAddClick"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Page>
