<UserControl x:Class="EquipmentAccounting.Pages.Equipment.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EquipmentAccounting.Pages.Equipment"
                          mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800"
             MouseEnter="OnEnter"
             MouseLeave="OnLeave">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#0060AC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28AEED"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#F8F9FA"
             CornerRadius="10"
            Width="Auto"
            Height="150"
            Padding="15"
            Margin="10"
            VerticalAlignment="Center"
            x:Name="itemBorder">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <!-- Фото оборудования -->
            <Border Grid.Column="0"
                    Width="100"
                    Height="100"
                    CornerRadius="5"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Background="#F0F0F0">
                <Image x:Name="imgPhoto"
                       Stretch="Uniform"
                       Source="/Images/default-equipment.png"/>
            </Border>

            <!-- Основная информация -->
            <StackPanel Grid.Column="1"
                        Margin="15,0">
                <TextBlock x:Name="txtName"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#0060AC"
                           TextTrimming="CharacterEllipsis"/>

                <TextBlock x:Name="txtModel"
                           Foreground="#666"
                           Margin="0,5,0,0"/>

                <TextBlock x:Name="txtStatus"
                           FontWeight="Medium"
                           Margin="0,5,0,0"/>

                <TextBlock x:Name="txtComment"
                           Foreground="#888"
                           FontStyle="Italic"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Техническая информация -->
            <StackPanel Grid.Column="2"
                        Margin="10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Инв. номер:" Foreground="#666"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtInventoryNumber" FontWeight="Medium" Margin="5,0,0,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Стоимость:" Foreground="#666" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtCost" FontWeight="Medium" Margin="5,5,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Кабинет:" Foreground="#666" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtRoom" FontWeight="Medium" Margin="5,5,0,0"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Направление:" Foreground="#666" Margin="0,5,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtDirection" FontWeight="Medium" Margin="5,5,0,0"/>
                </Grid>
            </StackPanel>

            <!-- Кнопки управления -->
            <StackPanel Grid.Column="3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <Button x:Name="btnDelete"
                        Content="×"
                        Background="#DC3545"
                        Click="btnDelete_Click"
                        Margin="0,0,0,0"
                        Height="30"
                        Width="30">
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
